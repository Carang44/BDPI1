<h1><%= name %> Tratamientos</h1>
<%= form_for(@treatment) do |f| %>
	<% @treatment.errors.full_messages.each do |mensajes| %>
	<div class="be-red white top-space">
		* <%= mensajes %>
	</div>
	<%end%>
	<div class="field">
		<%= f.text_field :nombreTratamiento, placeholder: "Nombre del Tratamiento", class:"form-control" %>
	</div>
	<div class="field">
		<%= f.text_field :descripcionTratamiento, placeholder: "Descripción del Tratamiento", class:"form-control" %>
	</div>
	<div class="field">
		<%= f.text_field :fechaInicio, placeholder: "Fecha de Inicio del Tratamiento", class:"form-control" %>
	</div>
	<div class="field">
		<%= f.text_field :fechaFin, placeholder: "Fecha de Finalización del Tratamiento", class:"form-control" %>
	</div>
	<div class="field">
		<%= f.submit "Guardar", class:"btn be-red white" %>
	</div>	
<%end%>